{
  "models": {
    "google": {
      "difficulty_range": [4, 6],
      "history_context": 5
    },
    "openai": {
      "difficulty_range": [7, 10],
      "history_context": 10
    },
    "local": {
      "difficulty_range": [1, 3],
      "history_context": 3
    }
  },
  "max_history": 10,
  "security": {
    "blocked_terms": [";", "&&", "|", "`", "$("]
  },
  "log_level": "INFO",
  "system": {
    "stop_commands": ["stop", "para", "detente", "silencio"],
    "error_messages": {
      "security": "Lo siento, tu consulta no puede ser procesada por razones de seguridad.",
      "general": "Lo siento, ha ocurrido un error procesando tu consulta."
    },
    "history": {
      "default_size": 3,
      "memories_size": 5,
      "empty_message": "Sin historial reciente"
    }
  }
}